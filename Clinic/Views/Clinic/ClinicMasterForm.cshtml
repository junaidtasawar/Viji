﻿@model ClinicBO.ClinicModel

<form id="ClinicMasterFormID" action="/Clinic/SaveClinicDetails" method="post" class="needs-validation" novalidate>
    @Html.HiddenFor(model => model.ClinicID)
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="form-group">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control ", placeholder = "Name" })
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                @Html.TextAreaFor(model => model.Address, new { @class = "form-control ", placeholder = "Address" })
            </div>
        </div>
    </div>
    <div class="text-right">
        <button class="btn btn-success" type="button" onclick="SaveClientDetails();">Save</button>
        <button class="btn btn-primary" type="button" onclick="ResetClientDetails();">Reset</button>
    </div>
</form>
<script src="~/plugins/notification/notify.js"></script>
<script src="~/Scripts/utility/common.js"></script>
<script src="~/Scripts/utility/error.js"></script>
<script src="~/Scripts/Validation/validation.js"></script>
<script src="~/js/ClientMaster.js" type="text/javascript"></script>

