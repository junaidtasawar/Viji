﻿@model IEnumerable<ClinicBO.CCMNoteInfoModel>
    @{ 
        int i = 0;
    }
    <div id="divbtnGenerated">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                if (i == 0)
                {
                @:<div class="row">
                }

                <div class="col-12 col-md-3">
                    <div class="form-group">
                        <button type="button" id="@item.CCMNoteID" onclick="getCCMNoteDescription(@item.CCMNoteID)" class="badge badge-info" style="background-color: #D3D3D3; width: -webkit-fill-available;">@item.CCMNoteText</button>
                    </div>
                </div>
                if (i == 3)
                {
                @:</div>
            }
                i++;
                if (i == 4)
                {
                    i = 0;
                }
            }
        }

    </div>
