@model Clinic.Models.ReportModel.ReportModel

@{
    ViewBag.Title = "CCMReport";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<link href="~/Content/themes/base/minified/CustomStyleSheet.css" rel="stylesheet" />
<div class="app-loader"><i class="icofont-spinner-alt-4 rotate"></i></div>

<div class="main-content-wrap">
    <header class="page-header">
        <h3 class="page-title">Report</h3>
    </header>

    <div class="page-content">
        <div class="card mb-0">
            <div class="row">
                <div class="col-12 col-md-3">
                    <div class="form-group text-left">
                        @Html.TextBoxFor(model => model.FromDate, new { @class = "form-control", placeholder = "From Date" })
                    </div>
                </div>
                <div class="col-12 col-md-3">
                    <div class="form-group text-left">
                        @Html.TextBoxFor(model => model.ToDate, new { @class = "form-control", placeholder = "To Date" })
                    </div>
                </div>
                <div class="col-12 col-md-1">
                    <div class="form-group">
                        <label class="control-label">Time Spent</label>
                    </div>
                </div>
                <div class="col-12 col-md-5">
                    <div class="form-group text-left">
                        @{ Html.RenderAction("CCMTimeSpanDDL", "common"); }
                        @Html.HiddenFor(Model => Model.CCMTimeSpan)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-md-4">
                    <div class="form-group text-left">
                        <input type="checkbox" id="chkBillable" name="chkBillable" class="checkbox_check">
                        <label class="control-label">Only Billable Notes</label>
                    </div>
                </div>
                <div class="col-12 col-md-8">
                    <div class="form-group text-right">
                        <button type="button" id="btnSearch" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mb-0">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="ccmReportGrid"></table>
                </div>
            </div>
        </div>
        <br />
        <div class="card mb-0">
            <div class="card-body">
                <div class="row" id="downloadBillingReport">
                    <div class="col-md-12">
                        <div class="form-group text-right">
                            <a href="javascript:void(0);" onclick="downloadBillableReport()" class="btn btn-primary">Download Billable Report</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*<link href="~/Content/themes/base/minified/bootstrap.min.css" rel="stylesheet" />*@
<link href="~/plugins/gijgo/gijgo.css" rel="stylesheet" />
<script src="~/plugins/gijgo/gijgo.js"></script>
<script src="~/plugins/datepicker/bootstrap-datepicker.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/1.3.3/FileSaver.min.js"></script>
<script src="~/js/Report.js"></script>
